<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="Back" />

    <Button android:id="@+id/button0" android:text="0" style="@style/ChoiceButton"/>
    <Button android:id="@+id/button1" android:text="1" style="@style/ChoiceButton"/>
    <Button android:id="@+id/button2" android:text="2" style="@style/ChoiceButton"/>

</LinearLayout>